networks:
  default:
    external: true
    name: docker
services:
  service:
    extra_hosts:
      - host.docker.internal:host-gateway
    image: ghcr.io/maxexcloo/caddy
    labels:
      caddy_0: (external)
      caddy_1: (internal)
      caddy_1.tls.dns: cloudflare ${cloudflare_api_token}
      caddy_1.tls.resolvers: 1.1.1.1
    ports:
      - 80:80
      - 443:443
    restart: unless-stopped
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - data:/data
volumes:
  data:
